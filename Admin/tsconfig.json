{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["DOM", "ES6"],
    "rootDir": "./App/public/Ts",
    "outDir": "./App/public/Javascript",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  
  "include": [
    "./App/public/Ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
