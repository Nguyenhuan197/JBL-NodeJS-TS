{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "lib": ["DOM", "ES2015"],
      "rootDir": "./App/public/Ts",
      "outDir": "./App/public/Javascript",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "./App/public/Ts/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "watchOptions": {
      "watchFile": "useFsEvents",
      "watchDirectory": "useFsEvents",
      "fallbackPolling": "dynamicPriority"
    }
  }
  